<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sit_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.Sam.samvel.pokerasstistant.Sit_place">
    <Button
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:text="MP"
        android:textSize="30dp"
        android:background="@drawable/button_bg_style"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/mp"
        android:onClick="onMP"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:text="CO"
        android:textSize="30dp"
        android:background="@drawable/button_bg_style"
        android:id="@+id/co"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:onClick="onCO"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:text="SB"
        android:textSize="30dp"
        android:background="@drawable/button_bg_style"
        android:layout_below="@+id/utg"
        android:layout_marginTop="57dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/sb"
        android:onClick="onSB"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:text="BB"
        android:textSize="30dp"
        android:id="@+id/bb"
        android:background="@drawable/button_bg_style"
        android:layout_below="@+id/utg"
        android:layout_marginTop="57dp"
        android:layout_alignParentRight="true"
        android:onClick="onBB"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:text="BT"
        android:textSize="30dp"
        android:id="@+id/bt"
        android:background="@drawable/button_bg_style"
        android:onClick="onBT"
        android:layout_below="@+id/utg"
        android:layout_marginTop="57dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_height="50dp"
        android:layout_width="100dp"
        android:text="UTG"
        android:textSize="30dp"
        android:id="@+id/utg"
        android:onClick="onUTG"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/button_bg_style"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/Where_are_you_sitting"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:id="@+id/sit_quest"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
